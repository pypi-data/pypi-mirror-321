{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "verbatimModuleSyntax": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "types": ["svelte"],
      "baseUrl": ".",
      "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
    },
    "include": [
      "src/**/*.d.ts",
      "src/**/*.ts",
      "src/**/*.svelte"
    ],
    "exclude": ["node_modules"]
}