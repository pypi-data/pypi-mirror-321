{% if opts.pip_req -%}

{% for cred in opts.get("pip_cred_vars",[]) -%}
ARG {{ cred }}
{% endfor -%}
RUN {% if aux.pip.use_uv %}uv {%endif%}pip install \
    {% for pkg in opts.pip_req -%}
        "{{ pkg }}" \
    {% endfor -%}
    {% for url in opts.get("pip_extra_url",[]) -%}
    --extra-index-url {{ url }} \
    {% endfor -%}
    --no-cache

{% endif -%}
