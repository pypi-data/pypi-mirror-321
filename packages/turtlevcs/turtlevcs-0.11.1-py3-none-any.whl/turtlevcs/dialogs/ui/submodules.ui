<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <template class="SubmodulesWindow" parent="AdwApplicationWindow">
    <property name="title"></property>
    <property name="icon-name">de.philippun1.turtle</property>
    <property name="default-width">520</property>
    <!-- <property name="default-height">300</property> -->
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>

        <!-- headerbar -->
        <child>
          <object class="AdwHeaderBar">
            <child>
              <object class="GtkButton" id="add_button">
                <property name="label">Add</property>
                <style>
                  <class name="suggested-action" />
                </style>
                <signal name="clicked" handler="_add_clicked" />
              </object>
            </child>
          </object>
        </child>

        <!-- content -->
        <child>
          <object class="GtkBox">
            <property name="margin-top">12</property>
            <property name="margin-end">12</property>
            <property name="margin-bottom">12</property>
            <property name="margin-start">12</property>
            <property name="spacing">12</property>
            <property name="orientation">vertical</property>

            <child>
              <object class="GtkListBox" id="submodules">
                <style>
                  <class name="boxed-list" />
                </style>
              </object>
            </child>

            <child>
              <object class="GtkListBox">
                <style>
                  <class name="boxed-list" />
                </style>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Update Selected</property>
                    <property name="subtitle">Update Submodule(s)</property>
                    <property name="selectable">0</property>

                    <child>
                      <object class="GtkCheckButton" id="checkbutton_init">
                        <property name="label">Init</property>
                      </object>
                    </child>

                    <child>
                      <object class="GtkCheckButton" id="checkbutton_recursive">
                        <property name="label">Recursive</property>
                        <property name="sensitive">0</property>
                      </object>
                    </child>

                    <child>
                      <object class="GtkButton" id="button_update">
                        <property name="valign">center</property>
                        <property name="label">Update</property>
                        <signal name="clicked" handler="_update_clicked" />
                        <style>
                          <class name="suggested-action" />
                        </style>
                      </object>
                    </child>
                  </object>
                </child>

              </object>
            </child>

          </object>
        </child>

      </object>
    </child>
  </template>
</interface>