<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="CreateWindow" parent="AdwApplicationWindow">
    <property name="title"></property>
    <property name="icon-name">de.philippun1.turtle</property>
    <property name="default-width">600</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>

        <!-- headerbar -->
        <child>
          <object class="AdwHeaderBar">
            <child>
              <object class="GtkButton" id="create_button">
                <property name="label">Create</property>
                <style>
                  <class name="suggested-action"/>
                </style>
                <signal name="clicked" handler="_ok_clicked" />
              </object>
            </child>
          </object>
        </child>

        <!-- content -->
        <child>
          <object class="GtkBox">
            <property name="margin-top">12</property>
            <property name="margin-end">12</property>
            <property name="margin-bottom">12</property>
            <property name="margin-start">12</property>
            <property name="spacing">12</property>
            <property name="orientation">vertical</property>

            <child>
              <object class="GtkListBox">
                <style>
                  <class name="boxed-list"/>
                </style>
                <child>
                  <object class="AdwEntryRow" id="name_entry">
                    <property name="title">Name</property>
                    <signal name="changed" handler="_branch_name_changed" />
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="tag_type_row">
                    <property name="title">Type</property>
                    <property name="subtitle">Tag Type</property>
                    <property name="selectable">0</property>
                    <child>
                      <object class="GtkCheckButton" id="lightweight_button">
                        <property name="label">Lightweight</property>
                        <property name="valign">center</property>
                        <property name="active">1</property>
                        <signal name="toggled" handler="_tag_type_changed_handler" />
                      </object>
                    </child>
                    <child>
                      <object class="GtkCheckButton" id="annotated_button">
                        <property name="label">Annotated</property>
                        <property name="valign">center</property>
                        <property name="group">lightweight_button</property>
                        <signal name="toggled" handler="_tag_type_changed_handler" />
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwEntryRow" id="annotation_entry">
                    <property name="title">Annotation</property>
                    <signal name="changed" handler="_annotation_changed" />
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="based_on_row">
                    <property name="title">Base</property>
                    <property name="subtitle">Based On</property>
                    <property name="selectable">0</property>
                    <child>
                      <object class="GtkCheckButton" id="head_button">
                        <property name="label">HEAD</property>
                        <property name="valign">center</property>
                        <property name="active">1</property>
                        <signal name="toggled" handler="_based_on_changed_handler" />
                      </object>
                    </child>
                    <child>
                      <object class="GtkCheckButton" id="branch_button">
                        <property name="label">Branch</property>
                        <property name="valign">center</property>
                        <property name="group">head_button</property>
                        <signal name="toggled" handler="_based_on_changed_handler" />
                      </object>
                    </child>
                    <child>
                      <object class="GtkCheckButton" id="commit_button">
                        <property name="label">Commit</property>
                        <property name="valign">center</property>
                        <property name="group">branch_button</property>
                        <signal name="toggled" handler="_based_on_changed_handler" />
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="head_row">
                    <property name="title">HEAD</property>
                    <property name="subtitle">HEAD hash</property>
                    <property name="selectable">0</property>
                    <child>
                      <object class="GtkLabel" id="head_label">
                        <property name="label"></property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwComboRow" id="branch_row">
                    <property name="title">Name</property>
                    <property name="subtitle">Branch Name</property>
                    <property name="selectable">0</property>
                    <property name="model">
                      <object class="GtkStringList" id="branch_model">
                      </object>
                    </property>
                    <!-- <signal name="notify::selected-item" handler="_branch_changed_handler" /> -->
                  </object>
                </child>
                <child>
                  <object class="AdwEntryRow" id="commit_row">
                    <property name="title">Commit Hash</property>
                    <property name="selectable">0</property>
                    <signal name="changed" handler="_commit_entry_changed_handler" />
                    <child>
                      <object class="GtkButton">
                        <property name="icon-name">search-symbolic</property>
                        <property name="valign">center</property>
                        <signal name="clicked" handler="_commit_search_button_handler" />
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="specific_commit_row">
                    <property name="title">Commit</property>
                    <property name="subtitle">Commit hash</property>
                    <property name="selectable">0</property>
                    <child>
                      <object class="GtkLabel" id="specific_commit_label">
                        <property name="label"></property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="settings_row">
                    <property name="title">Settings</property>
                    <property name="subtitle">Create Settings</property>
                    <property name="selectable">0</property>
                    <child>
                      <object class="GtkCheckButton" id="force">
                        <property name="label">Force</property>
                        <property name="valign">center</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkCheckButton" id="checkout">
                        <property name="label">Checkout</property>
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

          </object>
        </child>

      </object>
    </child>
  </template>
</interface>
