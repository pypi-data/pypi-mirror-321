<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="EnterCredentials" parent="AdwMessageDialog">
    <property name="heading">Credentials</property>
    <property name="default-width">480</property>
    <child>
      <object class="GtkGrid">
        <property name="column-spacing">24</property>
        <property name="row-spacing">6</property>

        <child>
          <object class="GtkLabel" id="label_user">
            <property name="label">User</property>
            <property name="halign">end</property>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="entry_user">
            <property name="hexpand">1</property>
            <layout>
                <property name="column">1</property>
                <property name="row">0</property>
              </layout>
          </object>
        </child>

        <child>
          <object class="GtkLabel" id="label_password">
            <property name="label">Password</property>
            <property name="halign">end</property>
            <layout>
              <property name="column">0</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkPasswordEntry" id="entry_password">
            <property name="hexpand">1</property>
            <property name="show-peek-icon">1</property>
            <layout>
                <property name="column">1</property>
                <property name="row">1</property>
              </layout>
          </object>
        </child>

        <child>
          <object class="GtkCheckButton" id="store_password">
            <property name="label">Store password</property>
            <layout>
                <property name="column">1</property>
                <property name="row">2</property>
              </layout>
          </object>
        </child>

      </object>
    </child>
  </template>
</interface>
