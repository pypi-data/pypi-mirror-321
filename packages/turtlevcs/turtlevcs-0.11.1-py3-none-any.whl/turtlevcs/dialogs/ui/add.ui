<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="AddWindow" parent="AdwApplicationWindow">
    <property name="title"></property>
    <property name="icon-name">de.philippun1.turtle</property>
    <property name="default-width">600</property>
    <property name="default-height">400</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>

        <!-- headerbar -->
        <child>
          <object class="AdwHeaderBar">
            <child>
              <object class="GtkButton" id="add_button">
                <property name="label">Add</property>
                <style>
                  <class name="suggested-action"/>
                </style>
                <signal name="clicked" handler="_ok_clicked" />
              </object>
            </child>
            <child>
              <object class="GtkButton" id="refresh_button">
                <signal name="clicked" handler="_refresh_clicked" />
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">view-refresh</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <!-- content -->
        <child>
          <object class="GtkBox">
            <property name="margin-top">12</property>
            <property name="margin-end">12</property>
            <property name="margin-bottom">12</property>
            <property name="margin-start">12</property>
            <property name="spacing">12</property>
            <property name="orientation">vertical</property>

            <child>
              <object class="GtkScrolledWindow" id="scolled_window">
              </object>
            </child>

          </object>
        </child>

      </object>
    </child>
  </template>
</interface>
