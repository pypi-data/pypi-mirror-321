<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <template class="CleanWindow" parent="AdwApplicationWindow">
    <property name="title"></property>
    <property name="icon-name">de.philippun1.turtle</property>
    <property name="default-width">520</property>
    <!-- <property name="default-height">400</property> -->
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>

        <!-- headerbar -->
        <child>
          <object class="AdwHeaderBar">
            <child>
              <object class="GtkButton" id="clean_button">
                <property name="label">Clean</property>
                <style>
                  <class name="suggested-action" />
                </style>
                <signal name="clicked" handler="_clean_clicked" />
              </object>
            </child>
          </object>
        </child>

        <!-- content -->
        <child>
          <object class="GtkBox">
            <property name="margin-top">12</property>
            <property name="margin-end">12</property>
            <property name="margin-bottom">12</property>
            <property name="margin-start">12</property>
            <property name="spacing">12</property>
            <property name="orientation">vertical</property>

            <child>
              <object class="GtkListBox">
                <style>
                  <class name="boxed-list"/>
                </style>
                <child>
                  <object class="AdwComboRow" id="clean_type_row">
                    <property name="title">Type</property>
                    <property name="subtitle">Clean Type</property>
                    <property name="selectable">0</property>
                    <property name="model">
                      <object class="GtkStringList">
                        <items>
                          <item translatable="yes">All files</item>
                          <item translatable="yes">Non-ignored files</item>
                          <item translatable="yes">Only ignored files</item>
                        </items>
                      </object>
                    </property>
                    <signal name="notify::selected-item" handler="_type_changed_handler" />
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Directories</property>
                    <property name="subtitle">Delete directories</property>
                    <property name="selectable">0</property>
                    <child>
                      <object class="GtkSwitch" id="directories_switch">
                        <property name="valign">center</property>
                        <signal name="state-set" handler="_directories_changed_handler" />
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwExpanderRow">
                    <property name="title">Preview</property>
                    <property name="subtitle">To-be-deleted files and folders</property>
                    <property name="selectable">0</property>
                    <child>
                      <object class="GtkScrolledWindow">
                        <property name="height-request">240</property>
                        <child>
                          <object class="GtkTextView" id="textview">
                            <property name="editable">0</property>
                            <style>
                            <class name="card"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

          </object>
        </child>

      </object>
    </child>
  </template>
</interface>