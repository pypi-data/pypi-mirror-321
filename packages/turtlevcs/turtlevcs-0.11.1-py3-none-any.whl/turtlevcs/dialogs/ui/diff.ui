<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="DiffWindow" parent="AdwApplicationWindow">
    <property name="title">Diff</property>
    <property name="icon-name">de.philippun1.turtle</property>
    <property name="default-width">600</property>
    <property name="default-height">520</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>

        <!-- headerbar -->
        <child>
          <object class="AdwHeaderBar">
            <child>
              <object class="GtkButton" id="refresh_button">
                <signal name="clicked" handler="_refresh_clicked" />
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">view-refresh</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <!-- content -->
        <child>
          <object class="GtkBox">
            <property name="margin-top">12</property>
            <property name="margin-end">12</property>
            <property name="margin-start">12</property>
            <property name="spacing">12</property>
            <property name="orientation">vertical</property>

            <child>
              <object class="GtkListBox">
                <style>
                  <class name="boxed-list"/>
                </style>
                <child>
                  <object class="AdwEntryRow" id="path_entry">
                    <property name="title">Diff Path</property>
                    <child>
                      <object class="GtkButton" id="file_open_button">
                        <property name="icon-name">document-open-symbolic</property>
                        <property name="tooltip-text">Open a file</property>
                        <property name="valign">center</property>
                        <signal name="clicked" handler="_path_entry_button_handler" />
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="folder_open_button">
                        <property name="icon-name">folder-open-symbolic</property>
                        <property name="tooltip-text">Open a folder</property>
                        <property name="valign">center</property>
                        <signal name="clicked" handler="_path_entry_button_handler" />
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

          </object>
        </child>

        <child>
          <object class="GtkBox">
            <property name="margin-top">12</property>
            <property name="margin-end">12</property>
            <property name="margin-start">12</property>
            <property name="spacing">12</property>
            <property name="orientation">vertical</property>

            <child>
              <object class="GtkListBox">
                <style>
                  <class name="boxed-list"/>
                </style>
                <child>
                  <object class="AdwActionRow" id="based_on_row">
                    <property name="title">Left Base</property>
                    <property name="subtitle">Based On For Left Side</property>
                    <property name="selectable">0</property>
                    <child>
                      <object class="GtkCheckButton" id="head_button">
                        <property name="label">HEAD</property>
                        <property name="valign">center</property>
                        <property name="active">1</property>
                        <signal name="toggled" handler="_based_on_changed_handler" />
                      </object>
                    </child>
                    <child>
                      <object class="GtkCheckButton" id="branch_button">
                        <property name="label">Branch</property>
                        <property name="valign">center</property>
                        <property name="group">head_button</property>
                        <signal name="toggled" handler="_based_on_changed_handler" />
                      </object>
                    </child>
                    <child>
                      <object class="GtkCheckButton" id="commit_button">
                        <property name="label">Commit</property>
                        <property name="valign">center</property>
                        <property name="group">branch_button</property>
                        <signal name="toggled" handler="_based_on_changed_handler" />
                      </object>
                    </child>
                    <child>
                      <object class="GtkCheckButton" id="working_copy_button">
                        <property name="label">Working Copy</property>
                        <property name="valign">center</property>
                        <property name="group">commit_button</property>
                        <property name="visible">0</property>
                        <signal name="toggled" handler="_based_on_changed_handler" />
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="head_row">
                    <property name="title">Left HEAD</property>
                    <property name="subtitle">Left HEAD hash</property>
                    <property name="selectable">0</property>
                    <child>
                      <object class="GtkLabel" id="head_label">
                        <property name="label"></property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwComboRow" id="branch_row">
                    <property name="title">Name</property>
                    <property name="subtitle">Branch Name</property>
                    <property name="selectable">0</property>
                    <property name="model">
                      <object class="GtkStringList" id="branch_model">
                      </object>
                    </property>
                    <signal name="notify::selected-item" handler="_branch_changed_handler" />
                  </object>
                </child>
                <child>
                  <object class="AdwEntryRow" id="commit_row">
                    <property name="title">Commit Hash</property>
                    <property name="selectable">0</property>
                    <signal name="changed" handler="_commit_entry_changed_handler" />
                    <child>
                      <object class="GtkButton">
                        <property name="icon-name">search-symbolic</property>
                        <property name="valign">center</property>
                        <signal name="clicked" handler="_commit_search_button_handler" />
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="specific_commit_row">
                    <property name="title">Commit</property>
                    <property name="subtitle">Commit hash</property>
                    <property name="selectable">0</property>
                    <child>
                      <object class="GtkLabel" id="specific_commit_label">
                        <property name="label"></property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

          </object>
        </child>

        <child>
          <object class="GtkBox">
            <property name="margin-top">12</property>
            <property name="margin-end">12</property>
            <property name="margin-bottom">12</property>
            <property name="margin-start">12</property>
            <property name="spacing">12</property>
            <property name="orientation">vertical</property>

            <child>
              <object class="GtkListBox">
                <style>
                  <class name="boxed-list"/>
                </style>
                <child>
                  <object class="AdwActionRow" id="based_on_row2">
                    <property name="title">Right Base</property>
                    <property name="subtitle">Based On For Right Side</property>
                    <property name="selectable">0</property>
                    <child>
                      <object class="GtkCheckButton" id="head_button2">
                        <property name="label">HEAD</property>
                        <property name="valign">center</property>
                        <property name="active">1</property>
                        <signal name="toggled" handler="_based_on_changed_handler2" />
                      </object>
                    </child>
                    <child>
                      <object class="GtkCheckButton" id="branch_button2">
                        <property name="label">Branch</property>
                        <property name="valign">center</property>
                        <property name="group">head_button2</property>
                        <signal name="toggled" handler="_based_on_changed_handler2" />
                      </object>
                    </child>
                    <child>
                      <object class="GtkCheckButton" id="commit_button2">
                        <property name="label">Commit</property>
                        <property name="valign">center</property>
                        <property name="group">branch_button2</property>
                        <signal name="toggled" handler="_based_on_changed_handler2" />
                      </object>
                    </child>
                    <child>
                      <object class="GtkCheckButton" id="working_copy_button2">
                        <property name="label">Working Copy</property>
                        <property name="valign">center</property>
                        <property name="group">commit_button2</property>
                        <signal name="toggled" handler="_based_on_changed_handler2" />
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="head_row2">
                    <property name="title">Right HEAD</property>
                    <property name="subtitle">Right HEAD hash</property>
                    <property name="selectable">0</property>
                    <child>
                      <object class="GtkLabel" id="head_label2">
                        <property name="label"></property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwComboRow" id="branch_row2">
                    <property name="title">Name</property>
                    <property name="subtitle">Branch Name</property>
                    <property name="selectable">0</property>
                    <property name="model">
                      <object class="GtkStringList" id="branch_model2">
                      </object>
                    </property>
                    <signal name="notify::selected-item" handler="_branch_changed_handler2" />
                  </object>
                </child>
                <child>
                  <object class="AdwEntryRow" id="commit_row2">
                    <property name="title">Commit Hash</property>
                    <property name="selectable">0</property>
                    <signal name="changed" handler="_commit_entry_changed_handler" />
                    <child>
                      <object class="GtkButton" id="commit_row_button2">
                        <property name="icon-name">search-symbolic</property>
                        <property name="valign">center</property>
                        <signal name="clicked" handler="_commit_search_button_handler" />
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="specific_commit_row2">
                    <property name="title">Commit</property>
                    <property name="subtitle">Commit hash</property>
                    <property name="selectable">0</property>
                    <child>
                      <object class="GtkLabel" id="specific_commit_label2">
                        <property name="label"></property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- <child>
              <object class="GtkListBox">
                <style>
                  <class name="boxed-list"/>
                </style>
                <child>
                  <object class="AdwEntryRow" id="path_row">
                    <property name="title">File / Directory Path</property>
                    <property name="selectable">0</property>
                    <signal name="changed" handler="_path_entry_changed_handler" />
                    <child>
                      <object class="GtkButton">
                        <property name="icon-name">search-symbolic</property>
                        <property name="valign">center</property>
                        <signal name="clicked" handler="_path_search_button_handler" />
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child> -->

            <child>
              <object class="GtkScrolledWindow" id="scolled_window">
              </object>
            </child>

          </object>
        </child>

      </object>
    </child>
  </template>
</interface>
