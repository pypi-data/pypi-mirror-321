{% from 'components/menu_item.jinja' import menu_item %}

{#
    timelockrecovery_menu - Tabs menu to navigate between the timelockrecovery screens.
    Parameters:
    - active_menuitem: Current active tab. Options: 'general', 'settings', ...
 #}
{% macro timelockrecovery_menu(active_menuitem) -%}
	<nav class="text-center text-dark-200 border-b border-dark-600 mb-8">
		<ul class="flex flex-wrap -mb-px">
			{{ menu_item(service.id, 'index', 'Main', active_menuitem, isLeft=true) }}
			{{ menu_item(service.id, 'plans', 'Recovery Plans', active_menuitem) }}
			{{ menu_item(service.id, 'settings_get', 'Settings', active_menuitem, isRight=true) }}
		</ul>
	</nav>
{%- endmacro %}
